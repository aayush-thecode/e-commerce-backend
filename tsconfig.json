{
  "compilerOptions": {
    

    "target": "es2016",                                  
    /* Modules */
    "module": "commonjs",                               
    "rootDir": "./src",                                  
   
    "noEmit": false,                                                                   
    "outDir": "./build",                                   
   
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            

    "strict": true,                                      
    "strictNullChecks": true,                         
    "alwaysStrict": true,                             
    "noUnusedLocals": true,                          
    "allowUnusedLabels": true,                     
    
    "skipLibCheck": true                                 
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build"]
}
